datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Follow {
  createdAt  DateTime @default(now())
  followedId String?
  followerId String?
  id         String   @id @default(cuid())
  updatedAt  DateTime @updatedAt
}

model Tweet {
  author         String?
  comments       Comment[]
  content        String?
  createdAt      DateTime  @default(now())
  id             String    @id @default(cuid())
  likes          Like[]
  tweetAuthor    String?
  tweetContent   String?
  tweetCreatedAt DateTime?
  tweetUpdatedAt DateTime?
  updatedAt      DateTime  @updatedAt
}

model Comment {
  author           String?
  commentAuthor    String?
  commentContent   String?
  commentCreatedAt DateTime?
  commentTweet     String?
  commentUpdatedAt DateTime?
  content          String?
  createdAt        DateTime  @default(now())
  id               String    @id @default(cuid())
  tweet            Tweet?    @relation(fields: [tweetId], references: [id])
  tweetId          String?
  updatedAt        DateTime  @updatedAt
}

model User {
  bio          String?
  createdAt    DateTime @default(now())
  email        String?
  id           String   @id @default(cuid())
  likes        Like[]
  password     String?
  profileImage Json?
  updatedAt    DateTime @updatedAt
  username     String?
}

model Like {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  tweet     Tweet?   @relation(fields: [tweetId], references: [id])
  tweetId   String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}
